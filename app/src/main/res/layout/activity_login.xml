<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    tools:context="com.pa1jeswani.restaurantap.LoginAct">


    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/kvImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bkd2"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="399dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/logo"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="10"
            fbutton:layout_constraintHorizontal_bias="0.497"
            fbutton:layout_constraintLeft_toLeftOf="parent"
            fbutton:layout_constraintRight_toRightOf="parent"
            fbutton:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="100dp"
        android:layoutAnimation="@anim/animation"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Enter ID"
            android:inputType="text"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="34sp"
            app:met_baseColor="#fff"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAnimating="true"
            app:met_primaryColor="#fff"
            app:met_singleLineEllipsis="true"
            fbutton:met_clearButton="true"
            fbutton:met_iconLeft="@android:drawable/ic_dialog_email"
            fbutton:met_iconPadding="5dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etPswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="34sp"
            app:met_baseColor="#fff"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAnimating="true"
            app:met_primaryColor="#fff"
            app:met_singleLineEllipsis="true"
            fbutton:met_clearButton="true"
            fbutton:met_iconLeft="@android:drawable/ic_lock_idle_lock"
            fbutton:met_iconPadding="5dp"
             />
    </LinearLayout>


    <com.hanks.htextview.typer.TyperTextView
        android:id="@+id/tvNewAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layoutAnimation="@anim/animation"
        android:text="New User?? Create Account..."
        android:textAlignment="textEnd"
        android:textColor="@color/fbutton_color_orange"
        android:textSize="25sp"
        android:textStyle="italic"
        app:charIncrease="1"
        app:layout_constraintHorizontal_bias="0.633"
        app:typerSpeed="80"
        fbutton:layout_constraintBottom_toBottomOf="parent"
        fbutton:layout_constraintLeft_toLeftOf="parent"
        fbutton:layout_constraintRight_toRightOf="parent" />

        <com.dd.processbutton.FlatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="496dp"
            android:fontFamily="serif-monospace"
            android:id="@+id/btnULogin"
            android:text="LOG IN"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            custom:pb_colorError="@color/red_error"
            custom:pb_colorNormal="#f1c40a"
            custom:pb_colorPressed="@android:color/holo_green_dark"
            custom:pb_colorProgress="@color/purple_progress"
            custom:pb_textComplete="Success"
            custom:pb_textError="Error"
            custom:pb_textProgress="Loading" />


</android.support.constraint.ConstraintLayout>